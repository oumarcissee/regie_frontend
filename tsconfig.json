{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "verbatimModuleSyntax": true,

    "strictNullChecks": false,
    "module": "esnext",
    "isolatedModules": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowJs": true,
    
    "ignoreDeprecations": "5.0"
  },


  "references": [
    {
      "path": "./tsconfig.vite-config.json"
    }
  ]
}
